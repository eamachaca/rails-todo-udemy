<h1>To-Do Lists</h1>

<center>
  <div class="card" style="width: 18rem;">
    <div class="card-header">
      ToDo
    </div>
    <div class="card-body">
      <%= render 'form_index' %>
    </div>
  </div>
</center>
<table class="table table-bordered">
  <thead>
  <tr>
    <th>Description</th>
    <th>Completed</th>
    <th>Acciones</th>
  </tr>
  </thead>
  <tbody>
  <% @lists.each do |list| %>
    <tr <%= list.completed ? 'class=table-secondary' : '' %>>
      <td <%= list.completed ? 'class=striker' : '' %>>
        <%= link_to list.description, edit_list_path(list) %>
      </td>
      <td><%= list.completed %></td>
      <td>
        <center><%= link_to 'Destroy', list, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></center>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add ToDo Item', new_list_path, class: 'btn btn-primary' %>
