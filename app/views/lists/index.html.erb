<p id="notice"><%= notice %></p>

<h1>To-Do Lists</h1>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Description</th>
    <th>Completed</th>
    <th>Acciones</th>
  </tr>
  </thead>
  <tbody>
  <% @lists.each do |list| %>
    <tr <%= list.completed ? 'class=table-secondary' : '' %>>
      <td <%= list.completed ? 'class=striker' : '' %>><%= list.description %></td>
      <td><%= list.completed %></td>
      <td>
        <%= link_to 'Show', list %>
        <%= link_to 'Edit', edit_list_path(list) %>
        <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add ToDo Item', new_list_path, class: 'btn btn-primary' %>
